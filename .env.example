# Environment Configuration for EduTrack Verification Services
# Copy this to .env file and update with your actual credentials

# Email Configuration (Gmail example)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_DEFAULT_SENDER=noreply@edutrack.app

# Twilio SMS Configuration
# Sign up at https://www.twilio.com to get these credentials
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Database Configuration
DATABASE_URL=sqlite:///school_system.db

# Flask Configuration
SECRET_KEY=your-secret-key-change-in-production