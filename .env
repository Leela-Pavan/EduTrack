# EduTrack Environment Configuration
# For development - you can modify these settings

# Email Configuration (Gmail example)
# To enable email verification, update these with your Gmail credentials:
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_16_character_app_password
MAIL_DEFAULT_SENDER=your_email@gmail.com

# Twilio SMS Configuration
# To enable SMS verification, sign up at https://www.twilio.com and update these:
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Database Configuration
DATABASE_URL=sqlite:///school_system.db

# Flask Configuration
SECRET_KEY=edutrack-secret-key-development-2024

# Development Mode Settings
# Set to True to see verification codes in console (easier for testing)
DEVELOPMENT_MODE=True